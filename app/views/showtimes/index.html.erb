<div class="container">
  <h3>Showtimes:</a></h3>

  <% @showtimes.each do |showtime| %>
    <p><a href="/showtimes/<%= showtime.id %>">ID: <%= showtime.id %></a></p>
    <p>Start Time: <%= showtime.start_time.strftime("%I:%M%p") %></p>
    <p>End Time: <%= showtime.end_time.strftime("%I:%M%p") %></p>
    <p>Show Start Date: <%= showtime.start_show_date.strftime("%m/%d/%Y") %></p>
    <p>Show End Date: <%= showtime.end_show_date.strftime("%m/%d/%Y") %></p>
  <% end %>

  <%= link_to "Add a New Showtime", "/showtimes/new" %>
</div>