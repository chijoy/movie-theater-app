<% @showtime.errors.full_messages.each do |error| %>
  <p> <%= error %> </p>
<% end %>

<hr>
<h1>Add a New Showtime</h1>
<hr>

<%= form_tag "/showtimes", method: :post do %>
  <div class="form-group">
    <span class="text-danger"> * </span>
    <%= label_tag :start_time, "Start Time:" %>
    <%= time_field_tag :start_time, @showtime.start_time.strftime("%I:%M%p"), :class => "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <span class="text-danger"> * </span>
    <%= label_tag :end_time, "End Time:" %>
    <%= time_field_tag :end_time, @showtime.end_time.strftime("%I:%M%p"), :class => "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <span class="text-danger"> * </span>
    <%= label_tag :start_show_date, "Start Date:" %>
    <%= date_field_tag :start_show_date, @showtime.start_show_date.strftime("%m/%d/%Y"), :class => "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <span class="text-danger"> * </span>
    <%= label_tag :end_show_date, "End Date:" %>
    <%= date_field_tag :end_show_date, @showtime.end_show_date.strftime("%m/%d/%Y"), :class => "form-control" %>
  </div>
  <br>
  
  <div class="form-group">
    <%= submit_tag "Add a New Showtime", :class => "btn btn-sm btn-success" %>
  </div>
<% end %>