<% @customer.errors.full_messages.each do |error| %>
  <p> <%= error %> </p>
<% end %>

<div class="container">
  <hr>
  <h3>Sign Up Here</h3>
  <hr>

  <%= form_tag "/customers", method: :post do %>
    <div  class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :first_name, "First Name:" %>
      <%= text_field_tag :first_name, @customer.first_name, :class => "form-control" %>   
    </div>
    <div  class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :last_name, "Last Name:" %>
      <%= text_field_tag :last_name, @customer.last_name, :class => "form-control" %>   
    </div>
    <div class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :email, "Email:" %>
      <%= email_field_tag :email, @customer.email, :class => "form-control" %>
    </div>
    <div  class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :phone, "Phone Number:" %>
      <%= text_field_tag :phone, @customer.phone, :class => "form-control" %>   
    </div>
    <!-- Will use for future functionality to determine senior citizen discount, adult price, or child. -->
    <div  class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :birthdate, "Birthdate:" %>
      <%= text_field_tag :birthdate, @customer.birthdate, :class => "form-control" %>   
    </div> 
    <div class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :password, "Password:" %>
      <%= password_field_tag :password, nil, :class => "form-control" %>
    </div>
    <div class="form-group">
      <span class="text-danger"> * </span>
      <%= label_tag :password_confirmation, "Re-Enter your Password:" %>
      <%= password_field_tag :password_confirmation, nil, :class => "form-control"  %>
    </div>
    <%= submit_tag 'Sign Me Up!', :class => "btn btn-sm btn-success"  %>
  <% end %>
</div>